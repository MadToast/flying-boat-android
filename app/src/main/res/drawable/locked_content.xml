<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_translucent" />
            <size
                android:height="135dp"
                android:width="240dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/black_translucent" />
            <size
                android:height="45dp"
                android:width="45dp" />
        </shape>
    </item>
    <item
        android:drawable="@drawable/baseline_lock_24"
        android:gravity="center"
        android:width="25dp"
        android:height="25dp"></item>
</layer-list>